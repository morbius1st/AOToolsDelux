						MinHeight="30"
						HorizontalContentAlignment="Center"
						Background="#333333"
						Foreground="White"
						Click="BtnShowRootFields_OnClick"
						>
					<Button.Content>
						<StackPanel Orientation="Vertical">
							<TextBlock
									Margin="-1"
									Padding="0"
									TextAlignment="Center"
									Text="Show"
									/>
							<TextBlock
									Margin="-1"
									Padding="0"
									TextAlignment="Center"
									Text="Root Fields"
									/>
						</StackPanel>
					</Button.Content>
				</Button>

				<Button x:Name="BtnCellFields"
						Margin="0,0,0,5"
						Width="110"
						MinHeight="30"
						HorizontalContentAlignment="Center"
						Background="#333333"
						Foreground="White"
						Click="BtnShowCellFields_OnClick"
						>
					<Button.Content>
						<StackPanel Orientation="Vertical">
							<TextBlock
									Margin="-1"
									Padding="0"
									TextAlignment="Center"
									Text="Show"
									/>
							<TextBlock
									Margin="-1"
									Padding="0"
									TextAlignment="Center"
									Text="Cell Fields"
									/>
						</StackPanel>
					</Button.Content>
				</Button>


				<Button x:Name="BtnLockFields"
						Margin="0,0,0,5"
						Width="110"
						MinHeight="30"
						HorizontalContentAlignment="Center"
						Background="#333333"
						Foreground="White"
						Click="BtnShowLockFields_OnClick"
						>
					<Button.Content>
						<StackPanel Orientation="Vertical">
							<TextBlock
									Margin="-1"
									Padding="0"
									TextAlignment="Center"
									Text="Show"
									/>
							<TextBlock
									Margin="-1"
									Padding="0"
									TextAlignment="Center"
									Text="Lock Fields"
									/>
						</StackPanel>
					</Button.Content>
				</Button>

				<Button x:Name="BtnRootAppData"
						Margin="0,15,0,5"
						Width="110"
						MinHeight="30"
						HorizontalContentAlignment="Center"
						Background="#333333"
						Foreground="White"
						Click="BtnShowRootData_OnClick"
						>
					<Button.Content>
						<StackPanel Orientation="Vertical">
							<TextBlock
									Margin="-1"
									Padding="0"
									TextAlignment="Center"
									Text="Show Root"
									/>
							<TextBlock
									Margin="-1"
									Padding="0"
									TextAlignment="Center"
									Text="Data"
									/>
						</StackPanel>
					</Button.Content>
				</Button>

				<Button x:Name="BtnCellData"
						Margin="0,0,0,5"
						Width="110"
						MinHeight="30"
						HorizontalContentAlignment="Center"
						Background="#333333"
						Foreground="White"
						Click="BtnShowCellData_OnClick"
						>
					<Button.Content>
						<StackPanel Orientation="Vertical">
							<TextBlock
									Margin="-1"
									Padding="0"
									TextAlignment="Center"
									Text="Show"
									/>
							<TextBlock
									Margin="-1"
									Padding="0"
									TextAlignment="Center"
									Text="Cell Data"
									/>
						</StackPanel>
					</Button.Content>
				</Button>

				<Button x:Name="BtnLockData"
						Margin="0,0,0,5"
						Width="110"
						MinHeight="30"
						HorizontalContentAlignment="Center"
						Background="#333333"
						Foreground="White"
						Click="BtnShowLockData_OnClick"
						>
					<Button.Content>
						<StackPanel Orientation="Vertical">
							<TextBlock
									Margin="-1"
									Padding="0"
									TextAlignment="Center"
									Text="Show"
									/>
							<TextBlock
									Margin="-1"
									Padding="0"
									TextAlignment="Center"
									Text="Lock Data"
									/>
						</StackPanel>
					</Button.Content>
				</Button>




