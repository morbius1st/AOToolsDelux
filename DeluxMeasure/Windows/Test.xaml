			<SolidColorBrush x:Key="Bdr.Bkg.IsSel.Info" Color="{Binding Color, Source={StaticResource Base.Bkg}}" />
			<SolidColorBrush x:Key="Bdr.Bkg.NotSel.Info" Color="{StaticResource Blue.250}" />

			<!--  highlight field  -->
