					BottomRight="{StaticResource Normal.CornerRad}"
					TopLeft="{StaticResource Normal.CornerRad}"
					TopRight="{StaticResource Normal.CornerRad}"
					/>

			<CornerRadius x:Key="Right.CornerRadius"
					BottomLeft="0"
					BottomRight="{StaticResource Small.CornerRad}"
					TopLeft="0"
					TopRight="{StaticResource Small.CornerRad}"
					/>

			<CornerRadius x:Key="Left.CornerRadius"
					BottomLeft="{StaticResource Small.CornerRad}"
					BottomRight="0"
					TopLeft="{StaticResource Small.CornerRad}"
