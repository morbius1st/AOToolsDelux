					/>

			<Thickness x:Key="Hdr.Padding"
					Bottom="3"
					Left="5"
					Right="0"
					Top="0"
					/>

			<Thickness x:Key="Property.Padding.Left"
					Bottom="3"
					Left="5"
					Right="5"
					Top="0"
					/>

			<Thickness x:Key="Property.Padding.Right"
					Bottom="3"
					Left="5"
					Right="5"
					Top="0"
					/>



