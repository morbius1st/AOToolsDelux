<Window x:Name="WinUnitStyle"
		x:Class="DeluxMeasure.Windows.UnitStylesManager"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:local="clr-namespace:DeluxMeasure.Windows"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:sys="clr-namespace:System;assembly=mscorlib"
		xmlns:support="clr-namespace:DeluxMeasure.Windows.Support"
		xmlns:unitsUtil="clr-namespace:DeluxMeasure.UnitsUtil"
		Title="Unit Styles Manager"
		Width="740"
		Height="480"
		DataContext="{Binding RelativeSource={RelativeSource Self}}"
		mc:Ignorable="d"
		Background="{DynamicResource Normal.Window.Background}"
		Foreground="White"
		ResizeMode="NoResize"
		Closing="WinUnitStyle_Closing"
		>
	<!--  SizeToContent="Height"  -->

	<!-- <Window.Style> -->
	<!-- 	<Style TargetType="Window"> -->
	<!-- 		<Style.Triggers> -->
	<!-- 			<DataTrigger Binding="{Binding TempSel, FallbackValue='0'}" Value="0"> -->
	<!-- 				<Setter Property="ContentTemplate" Value="{DynamicResource StylesSelection}"></Setter> -->
	<!-- 			</DataTrigger> -->
	<!-- 			<DataTrigger Binding="{Binding TempSel}" Value="1"> -->
	<!-- 				<Setter Property="ContentTemplate" Value="{DynamicResource StylesOrder}"></Setter> -->
	<!-- 			</DataTrigger> -->
	<!-- 		</Style.Triggers> -->
	<!-- 	</Style> -->
	<!-- </Window.Style> -->

	<Window.Resources>

		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="ResourceFiles/XamlResources/MasterColorList.xaml" />
				<ResourceDictionary Source="ResourceFiles/XamlResources/VisualStates.xaml" />
				<ResourceDictionary Source="Support/ScrollViewerNarrow.xaml" />
				<ResourceDictionary Source="Support/ScrollBar.xaml" />
				<ResourceDictionary Source="ResourceFiles/SVG/IconDelete.xaml" />

			</ResourceDictionary.MergedDictionaries>

			<!--#region > resources and styles-->

			<!--  sample size  -->
			<sys:Double x:Key="FontSize.XLarge">18</sys:Double>
			<!--  header size  -->
			<sys:Double x:Key="FontSize.Large">16</sys:Double>
			<!--  typical font size  -->
			<sys:Double x:Key="FontSize.Normal">14</sys:Double>

			<sys:Double x:Key="FontSize.Small">10</sys:Double>


			<GridLength x:Key="Main.Row.Height">94*</GridLength>
			<GridLength x:Key="Function.Row.Height">10*</GridLength>
			<GridLength x:Key="Control.Row.Height">7*</GridLength>

			<GridLength x:Key="Project.Unit.Width">300*</GridLength>
			<GridLength x:Key="Style.Chart.Width">580*</GridLength>
			<!--  total size = 15px + 200 + 617 + 8 == 840  -->
			<!--  project unit column  -->

			<GridLength x:Key="Style.Chart.C0">0</GridLength>
			<GridLength x:Key="Style.Chart.C1">10*</GridLength>
			<GridLength x:Key="Style.Chart.C2">5*</GridLength>
			<GridLength x:Key="Style.Chart.C3">5*</GridLength>

			<CornerRadius x:Key="Normal.CornerRadius"
					BottomLeft="4"
					BottomRight="4"
					TopLeft="4"
					TopRight="4"
					/>

			<SolidColorBrush x:Key="Header.Background" Color="{StaticResource True.Green}" />

			<SolidColorBrush x:Key="Desc.Background" Color="{StaticResource Light.Blue.550}" />
			<SolidColorBrush x:Key="Value.Background" Color="{StaticResource Light.Blue.300}" />

			<!--#region > textblock-->

			<Style x:Key="Tblk.Base"
					TargetType="TextBlock"
					>
				<Setter Property="Margin" Value="0" />
				<Setter Property="Padding" Value="0" />
				<Setter Property="FontSize" Value="{StaticResource FontSize.Normal}" />
				<Setter Property="Foreground" Value="White" />
				<Setter Property="TextAlignment" Value="Left" />
				<Setter Property="VerticalAlignment" Value="Center" />
				<Setter Property="HorizontalAlignment" Value="Left" />
			</Style>

			<Style x:Key="Tblk.Desc"
					TargetType="TextBlock"
					BasedOn="{StaticResource Tblk.Base}"
					>
				<Setter Property="Padding" Value="6,0,7,2" />
				<Setter Property="HorizontalAlignment" Value="Center" />
				<Setter Property="Background" Value="Transparent" />
			</Style>

			<Style x:Key="Tblk.Value"
					TargetType="TextBlock"
					BasedOn="{StaticResource Tblk.Base}"
					>
				<Setter Property="Padding" Value="6,0,7,2" />
				<Setter Property="TextAlignment" Value="Center" />
				<Setter Property="Background" Value="Transparent" />
			</Style>

			<Style x:Key="Tblk.Lv1.Hdr.Prime"
					TargetType="TextBlock"
					BasedOn="{StaticResource Tblk.Base}"
					>
				<Setter Property="HorizontalAlignment" Value="Center" />
				<Setter Property="FontSize" Value="{StaticResource FontSize.Large}" />
			</Style>


			<Style x:Key="Tblk.Lv1.Value.Prime"
					TargetType="TextBlock"
					BasedOn="{StaticResource Tblk.Base}"
					>

			</Style>

			<Style x:Key="Tblk.Lv1.Value.2ndry"
					TargetType="TextBlock"
					BasedOn="{StaticResource Tblk.Lv1.Value.Prime}"
					>
				<Setter Property="Foreground" Value="LightGray" />
			</Style>


			<!--#endregion-->

			<Style x:Key="StkPnl"
					TargetType="StackPanel"
					>
				<Setter Property="VerticalAlignment" Value="Top" />
				<Setter Property="HorizontalAlignment" Value="Stretch" />
				<Setter Property="Orientation" Value="Horizontal" />
				<Setter Property="Margin" Value="0,0,12,5" />
			</Style>

			<Style x:Key="Bdr.Proj.Units.Desc"
					TargetType="Border"
					>
				<Setter Property="BorderThickness" Value="0" />
				<Setter Property="CornerRadius" Value="4,0,0,4" />
				<Setter Property="Background" Value="{StaticResource Desc.Background}" />
			</Style>

			<Style x:Key="Bdr.Proj.Units.Value"
					TargetType="Border"
					>
				<Setter Property="Margin" Value="0,0,0,0" />
				<Setter Property="BorderThickness" Value="0" />
				<Setter Property="CornerRadius" Value="0,4,4,0" />
				<Setter Property="MinWidth" Value="30" />
				<Setter Property="Background" Value="{StaticResource Value.Background}" />
			</Style>

			<Style x:Key="Bdr.Name.Entry"
					TargetType="Border"
					>
				<Setter Property="Background">
					<Setter.Value>
						<SolidColorBrush Color="{StaticResource Gray.300}" />
					</Setter.Value>
				</Setter>
				<Setter Property="BorderBrush">
					<Setter.Value>
						<SolidColorBrush Color="{StaticResource Gray.450}" />
					</Setter.Value>
				</Setter>
				<Style.Triggers>
					<Trigger Property="IsMouseOver" Value="True">
						<Setter Property="BorderBrush">
							<Setter.Value>
								<SolidColorBrush Color="{StaticResource Light.Blue.500}" />
							</Setter.Value>
						</Setter>
						<Setter Property="Background">
							<Setter.Value>
								<SolidColorBrush Color="{StaticResource Gray.200}" />
							</Setter.Value>
						</Setter>
					</Trigger>
				</Style.Triggers>
			</Style>


			<Style x:Key="Lv1.Prime.Hdr"
					TargetType="Border"
					>
				<Setter Property="BorderThickness" Value="0" />
				<Setter Property="CornerRadius" Value="4,0,0,4" />
				<Setter Property="Background" Value="{StaticResource Header.Prime.Bkg.Normal}" />
			</Style>


			<Style x:Key="Lv1.Prime.Item"
					TargetType="Border"
					>
				<Setter Property="BorderThickness" Value="0" />
				<Setter Property="CornerRadius" Value="4,0,0,4" />
				<Setter Property="Background" Value="{StaticResource Item.Prime.Bkg.Normal}" />
			</Style>

			<Style x:Key="Lv1.2ndry.Item"
					TargetType="Border"
					>
				<Setter Property="BorderThickness" Value="0" />
				<Setter Property="CornerRadius" Value="4,0,0,4" />
				<Setter Property="Background" Value="{StaticResource Item.2ndry.Bkg.Normal}" />
			</Style>

			<Style x:Key="FocusVisual">
				<Setter Property="Control.Template">
					<Setter.Value>
						<ControlTemplate>
							<Rectangle Margin="2"
									StrokeDashArray="1 2"
									Stroke="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"
									SnapsToDevicePixels="true"
									StrokeThickness="1"
									/>
						</ControlTemplate>
					</Setter.Value>
				</Setter>
			</Style>



			<SolidColorBrush x:Key="ListBox.Static.Background" Color="#FFFFFFFF" />
			<SolidColorBrush x:Key="ListBox.Static.Border" Color="#FFABADB3" />
			<SolidColorBrush x:Key="ListBox.Disabled.Background" Color="#FFFFFFFF" />
			<SolidColorBrush x:Key="ListBox.Disabled.Border" Color="#FFD9D9D9" />
			<SolidColorBrush x:Key="Item.MouseOver.Background" Color="#1F26A0DA" />
			<SolidColorBrush x:Key="Item.MouseOver.Border" Color="#a826A0Da" />
			<SolidColorBrush x:Key="Item.SelectedActive.Background" Color="#3D26A0DA" />
			<SolidColorBrush x:Key="Item.SelectedActive.Border" Color="#FF26A0DA" />
			<SolidColorBrush x:Key="Item.SelectedInactive.Background" Color="#3DDADADA" />
			<SolidColorBrush x:Key="Item.SelectedInactive.Border" Color="#FFDADADA" />
			<Style x:Key="ListBoxItemContainerStyle1"
					TargetType="{x:Type ListBoxItem}"
					>
				<Setter Property="SnapsToDevicePixels" Value="True" />
				<Setter Property="Padding" Value="0" />
				<Setter Property="HorizontalContentAlignment" Value="{Binding HorizontalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}" />
				<Setter Property="VerticalContentAlignment" Value="{Binding VerticalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}" />
				<Setter Property="Background" Value="Transparent" />
				<Setter Property="BorderBrush" Value="Transparent" />
				<Setter Property="BorderThickness" Value="0" />
				<Setter Property="FocusVisualStyle" Value="{StaticResource FocusVisual}" />
				<Setter Property="Template">
					<Setter.Value>
						<ControlTemplate TargetType="{x:Type ListBoxItem}">
							<Border x:Name="Bd"
									Padding="{TemplateBinding Padding}"
									Background="{TemplateBinding Background}"
									BorderThickness="{TemplateBinding BorderThickness}"
									BorderBrush="{TemplateBinding BorderBrush}"
									SnapsToDevicePixels="true"
									>
								<ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
										VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
										SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
										/>
							</Border>
							<ControlTemplate.Triggers>
								<MultiTrigger>
									<MultiTrigger.Conditions>
										<Condition Property="IsMouseOver" Value="True" />
									</MultiTrigger.Conditions>
									<Setter TargetName="Bd" Property="Background" Value="{StaticResource Item.MouseOver.Background}" />
									<Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource Item.MouseOver.Border}" />
								</MultiTrigger>
								<MultiTrigger>
									<MultiTrigger.Conditions>
										<Condition Property="Selector.IsSelectionActive" Value="False" />
										<Condition Property="IsSelected" Value="True" />
									</MultiTrigger.Conditions>
									<Setter TargetName="Bd" Property="Background" Value="{StaticResource Item.SelectedInactive.Background}" />
									<Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource Item.SelectedInactive.Border}" />
								</MultiTrigger>
								<MultiTrigger>
									<MultiTrigger.Conditions>
										<Condition Property="Selector.IsSelectionActive" Value="True" />
										<Condition Property="IsSelected" Value="True" />
									</MultiTrigger.Conditions>
									<Setter TargetName="Bd" Property="Background" Value="{StaticResource Item.SelectedActive.Background}" />
									<Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource Item.SelectedActive.Border}" />
								</MultiTrigger>
								<Trigger Property="IsEnabled" Value="False">
									<Setter TargetName="Bd" Property="TextElement.Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" />
								</Trigger>
							</ControlTemplate.Triggers>
						</ControlTemplate>
					</Setter.Value>
				</Setter>
			</Style>


			<Style x:Key="svStyle"
					TargetType="{x:Type ScrollViewer}"
					>
				<Setter Property="Template" Value="{StaticResource ScrollViewerNarrow}" />
				<Setter Property="support:ScrollBarAttached.ScrollBarWidth" Value="12" />
				<Setter Property="support:ScrollBarAttached.ThumbCornerRadius" Value="3" />
				<Setter Property="support:ScrollBarAttached.RepeatButtonLength" Value="12" />
				<Setter Property="support:ScrollBarAttached.ScrollBarWidth" Value="4" />
				<Setter Property="support:ScrollBarAttached.TrackWidth" Value="5" />
				<Setter Property="support:ScrollBarAttached.RepeatButtonIconGirth" Value="6" />
				<Setter Property="support:ScrollBarAttached.RepeatButtonIconLength" Value="10" />
				<Setter Property="support:ScrollBarAttached.VertBorderThickness" Value="0,0,0,0" />
				<Setter Property="support:ScrollBarAttached.VertBorderColor">
					<Setter.Value>
						<SolidColorBrush Color="{StaticResource Blue.350}" />
					</Setter.Value>
				</Setter>
				<Setter Property="support:ScrollBarAttached.HorizBorderThickness" Value="0,1,0,0" />
				<Setter Property="support:ScrollBarAttached.HorizBorderColor">
					<Setter.Value>
						<SolidColorBrush Color="{StaticResource Blue.350}" />
					</Setter.Value>
				</Setter>

				<Setter Property="support:ScrollViewerAttached.CornerRectColor">
					<Setter.Value>
						<SolidColorBrush Color="{StaticResource Gray.150}" />
					</Setter.Value>
				</Setter>

				<Setter Property="support:ScrollViewerAttached.CornerRectLeftBdrHeight" Value="1" />
				<Setter Property="support:ScrollViewerAttached.CornerRectLeftBdrColor">
					<Setter.Value>
						<SolidColorBrush Color="{StaticResource Blue.350}" />
					</Setter.Value>
				</Setter>

				<Setter Property="support:ScrollViewerAttached.CornerRectTopBdrHeight" Value="0" />
				<Setter Property="support:ScrollViewerAttached.CornerRectTopBdrColor">
					<Setter.Value>
						<SolidColorBrush Color="{StaticResource Blue.350}" />
					</Setter.Value>
				</Setter>

			</Style>

			<!--#endregion-->

			<DataTemplate x:Key="StylesSelection">

					<Grid DockPanel.Dock="Top">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="{StaticResource Project.Unit.Width}" />
							<ColumnDefinition Width="{StaticResource Style.Chart.Width}" />
						</Grid.ColumnDefinitions>

						<Grid.RowDefinitions>
							<RowDefinition Height="{StaticResource Main.Row.Height}" />
							<RowDefinition Height="{StaticResource Function.Row.Height}" />
							<RowDefinition Height="{StaticResource Control.Row.Height}" />
						</Grid.RowDefinitions>



						<DockPanel x:Name="CurrProjUnitControl"
								Grid.Column="0"
								Grid.Row="2"
								HorizontalAlignment="Stretch"
								>

							<Button 
									x:Name="BtnAddBefore"
									HorizontalAlignment="Left"
									VerticalAlignment="Bottom"
									FontSize="{StaticResource FontSize.Normal}"
									IsEnabled="False"
									DockPanel.Dock="Left"
									Template="{StaticResource Button.Normal.ControlTemplate}"
									>

								<Button.Content>
									<TextBlock Padding="10,1,10,3"
											FontSize="{StaticResource FontSize.Normal}"
											Text="Add Before"
											/>
								</Button.Content>
							</Button>

							<Border Margin="5,0,0,0"
									Width="Auto"
									Height="Auto"
									VerticalAlignment="Bottom"
									BorderThickness="1"
									DockPanel.Dock="Left"
									CornerRadius="{StaticResource Normal.CornerRadius}"
									Style="{StaticResource Bdr.Name.Entry}"
									>
								<TextBox 
										x:Name="TbxAddPosition"
										MinWidth="35"
										Padding="0,1,0,2"
										FontSize="{StaticResource FontSize.Normal}"
										Background="Transparent"
										Foreground="White"
										BorderThickness="0"
										TextAlignment="Center"
										Text="10"
										/>
							</Border>
							<Button 
									x:Name="BtnAddLast"
									HorizontalAlignment="Right"
									VerticalAlignment="Bottom"
									FontSize="{StaticResource FontSize.Normal}"
									IsEnabled="False"
									DockPanel.Dock="Right"
									Template="{StaticResource Button.Normal.ControlTemplate}"
									>

								<Button.Content>
									<TextBlock Padding="15,1,15,3"
											FontSize="{StaticResource FontSize.Normal}"
											Text="Add Last"
											/>
								</Button.Content>
							</Button>
						</DockPanel>

						<StackPanel x:Name="Lv1Control"
								Grid.Column="1"
								Grid.Row="2"
								Margin="5,0,10,0"
								HorizontalAlignment="Left"
								VerticalAlignment="Bottom"
								DockPanel.Dock="Bottom"
								Orientation="Horizontal"
								>

							<Button x:Name="BtnUp"
									Height="{Binding ElementName=BtnAddBefore, Path=ActualHeight}"
									Margin="0,0,5,0"
									HorizontalAlignment="Right"
									
									FontSize="{StaticResource FontSize.Normal}"
									Template="{StaticResource Button.Normal.ControlTemplate}"
									Click="BtnDone_OnClick"
									>
								<Button.Content>
									<TextBlock Padding="10,0,10,4"
											FontSize="{StaticResource FontSize.Normal}"
											Text="▲"
											/>
								</Button.Content>
							</Button>

							<Button x:Name="BtnDn"
									Height="{Binding ElementName=BtnAddBefore, Path=ActualHeight}"
									Margin="0,0,5,0"
									HorizontalAlignment="Right"
									Template="{StaticResource Button.Normal.ControlTemplate}"
									>
								<Button.Content>
									<TextBlock Padding="10,2,10,4"
											FontSize="{StaticResource FontSize.Normal}"
											Text="▼"
											/>
								</Button.Content>
							</Button>

							<Button x:Name="BtnDelete"
									Margin="0,0,5,0"
									Width="{Binding ElementName=BtnDn,
																	Path=ActualWidth,
																	FallbackValue=18}"
									Height="{Binding ElementName=BtnDn,
																	 Path=ActualHeight,
																	 FallbackValue=18}"
									Foreground="White"
									Template="{StaticResource Button.Normal.ControlTemplate}"
									>
								<Button.Background>
									<SolidColorBrush Color="{StaticResource Deep.Orange.600}">
									</SolidColorBrush>
								</Button.Background>
								<Button.Content>

									<Label Content="{StaticResource DeleteIcon}"
											Foreground="White"
											BorderThickness="0"
											/>

								</Button.Content>
							</Button>

						</StackPanel>

						<!--#region > column 0-->
						<DockPanel x:Name="Column0"
								Grid.Column="0"
								Grid.Row="0"
								Margin="0,0,0,0"
								>

							<Border x:Name="Column0Title"
									Margin="0,0,0,3"
									Background="{StaticResource Header.Background}"
									BorderThickness="0"
									DockPanel.Dock="Top"
									CornerRadius="{StaticResource Normal.CornerRadius}"
									>

								<TextBlock Padding="5,0,0,2"
										FontSize="{StaticResource FontSize.XLarge}"
										Foreground="Black"
										Text="Current Project Length Unit"
										/>
							</Border>

							<StackPanel x:Name="ProjUnit"
									DockPanel.Dock="Top"
									Orientation="Vertical"
									>

								<StackPanel x:Name="Sp_Units"
										Style="{StaticResource StkPnl}"
										>

									<Border Style="{StaticResource Bdr.Proj.Units.Desc}">
										<TextBlock Text="Units"
												Style="{StaticResource Tblk.Desc}"
												/>
									</Border>

									<Border x:Name="Desc_Units"
											Style="{StaticResource Bdr.Proj.Units.Value}"
											>
										<TextBlock Text="Feet and Fractional Inches"
												Style="{StaticResource Tblk.Value}"
												/>
									</Border>

								</StackPanel>

								<StackPanel x:Name="Sp_Symbol"
										Style="{StaticResource StkPnl}"
										>
									<Border Style="{StaticResource Bdr.Proj.Units.Desc}">
										<TextBlock Text="Symbol"
												Style="{StaticResource Tblk.Desc}"
												/>
									</Border>

									<Border x:Name="Value_Symbol"
											Style="{StaticResource Bdr.Proj.Units.Value}"
											>
										<TextBlock Text="&quot;"
												Style="{StaticResource Tblk.Value}"
												/>
									</Border>
								</StackPanel>

								<StackPanel x:Name="Sp_Rounding"
										Style="{StaticResource StkPnl}"
										>
									<Border Style="{StaticResource Bdr.Proj.Units.Desc}">
										<TextBlock Text="Rounding"
												Style="{StaticResource Tblk.Desc}"
												/>
									</Border>

									<Border x:Name="Value_Rounding"
											Style="{StaticResource Bdr.Proj.Units.Value}"
											>
										<TextBlock Text="1/64&quot;"
												Style="{StaticResource Tblk.Value}"
												/>
									</Border>
								</StackPanel>

								<StackPanel x:Name="Sp_LeadZero"
										Style="{StaticResource StkPnl}"
										>
									<Border Style="{StaticResource Bdr.Proj.Units.Desc}">
										<TextBlock Text="Leading Zero"
												Style="{StaticResource Tblk.Desc}"
												/>
									</Border>

									<Border x:Name="Value_LeadZero"
											Style="{StaticResource Bdr.Proj.Units.Value}"
											>
										<TextBlock Text="Suppress"
												Style="{StaticResource Tblk.Value}"
												/>
									</Border>
								</StackPanel>

								<StackPanel x:Name="Sp_TrailZero"
										Style="{StaticResource StkPnl}"
										>
									<Border Style="{StaticResource Bdr.Proj.Units.Desc}">
										<TextBlock Text="Zero Feet"
												Style="{StaticResource Tblk.Desc}"
												/>
									</Border>

									<Border x:Name="Value_TrailZero"
											Style="{StaticResource Bdr.Proj.Units.Value}"
											>
										<TextBlock Text="Suppress"
												Style="{StaticResource Tblk.Value}"
												/>
									</Border>
								</StackPanel>

								<StackPanel x:Name="Sp_Spaces"
										Style="{StaticResource StkPnl}"
										>
									<Border Style="{StaticResource Bdr.Proj.Units.Desc}">
										<TextBlock Text="Extra Spaces"
												Style="{StaticResource Tblk.Desc}"
												/>
									</Border>

									<Border x:Name="Value_Spaces"
											Style="{StaticResource Bdr.Proj.Units.Value}"
											>
										<TextBlock Text="Suppress"
												Style="{StaticResource Tblk.Value}"
												/>
									</Border>
								</StackPanel>

								<StackPanel x:Name="Sp_UsePlus"
										Style="{StaticResource StkPnl}"
										>
									<Border Style="{StaticResource Bdr.Proj.Units.Desc}">
										<TextBlock Text="Show + for Positive Values"
												Style="{StaticResource Tblk.Desc}"
												/>
									</Border>

									<Border x:Name="Value_UsePlus"
											Style="{StaticResource Bdr.Proj.Units.Value}"
											>
										<TextBlock Text="No"
												Style="{StaticResource Tblk.Value}"
												/>
									</Border>
								</StackPanel>

								<StackPanel x:Name="Sp_Grouping"
										Style="{StaticResource StkPnl}"
										>
									<Border Style="{StaticResource Bdr.Proj.Units.Desc}">
										<TextBlock Text="Use Digit Grouping"
												Style="{StaticResource Tblk.Desc}"
												/>
									</Border>

									<Border x:Name="Value_Grouping"
											Style="{StaticResource Bdr.Proj.Units.Value}"
											>
										<TextBlock Text="Yes"
												Style="{StaticResource Tblk.Value}"
												/>
									</Border>
								</StackPanel>

							</StackPanel>

							<DockPanel x:Name="AddUnit"
									HorizontalAlignment="Stretch"
									VerticalAlignment="Bottom"
									DockPanel.Dock="Bottom"
									>

								<TextBlock Margin="0,10,5,0"
										HorizontalAlignment="Stretch"
										FontSize="{StaticResource FontSize.Normal}"
										DockPanel.Dock="Top"
										Text="Add the above as a new style?"
										TextWrapping="Wrap"
										/>

								<TextBlock Margin="0,5,5,5"
										FontSize="{StaticResource FontSize.Normal}"
										DockPanel.Dock="Top"
										Text="Name for this style"
										/>

								<Border VerticalAlignment="Bottom"
										BorderThickness="1"
										CornerRadius="{StaticResource Normal.CornerRadius}"
										DockPanel.Dock="Top"
										Style="{StaticResource Bdr.Name.Entry}"
										>
									<TextBox x:Name="TbxNameEntry"
											Padding="5,0,5,2"
											FontSize="{StaticResource FontSize.Normal}"
											Background="Transparent"
											Foreground="White"
											BorderThickness="0"
											Text="now is the time 1"
											/>
								</Border>


								<TextBlock Margin="0,6,5,0"
										FontSize="{StaticResource FontSize.Normal}"
										DockPanel.Dock="Top"
										Text="Description for this style"
										/>

							</DockPanel>

						</DockPanel>


						<Border Grid.Column="0"
								Grid.Row="1"
								Margin="0,7,0,3"
								VerticalAlignment="Top"
								BorderThickness="1"
								CornerRadius="{StaticResource Normal.CornerRadius}"
								DockPanel.Dock="Top"
								Style="{StaticResource Bdr.Name.Entry}"
								>

							<TextBox x:Name="TbxDescEntry"
									Padding="5,0,5,2"
									FontSize="{StaticResource FontSize.Normal}"
									Background="Transparent"
									Foreground="White"
									BorderThickness="0"
									Text="now is the time 2"
									/>
						</Border>

						<!--#endregion-->

						<!--#region > column 1-->

						<DockPanel x:Name="Column1"
								Grid.Column="1"
								Grid.Row="0"
								Grid.RowSpan="2"
								Margin="5,0,0,0"
								HorizontalAlignment="Stretch"
								>
							<Border Margin="0,0,10,3"
									Background="{StaticResource Header.Background}"
									BorderThickness="0"
									DockPanel.Dock="Top"
									CornerRadius="{StaticResource Normal.CornerRadius}"
									>

								<TextBlock Padding="5,0,0,2"
										FontSize="{StaticResource FontSize.XLarge}"
										Foreground="Black"
										Text="Saved Styles"
										/>
							</Border>

							<ListBox x:Name="lbx"
									Margin="0,0,0,0"
									Padding="0"
									HorizontalAlignment="Stretch"
									VerticalAlignment="Top"
									DataContext="{Binding ElementName=WinUnitStyle,
																				Path=StylesView}"
									Background="Transparent"
									BorderThickness="0"
									IsSynchronizedWithCurrentItem="True"
									d:ItemsSource="{d:SampleData ItemCount=10}"
									DockPanel.Dock="Top"
									Grid.IsSharedSizeScope="True"
									ItemContainerStyle="{DynamicResource ListBoxItemContainerStyle1}"
									ItemsSource="{Binding}"
									>

								<ListBox.Resources>

									<Style TargetType="{x:Type ScrollViewer}"
											BasedOn="{StaticResource svStyle}"
											>
									</Style>

								</ListBox.Resources>

								<!--#region > style / header-->
								<ListBox.Style>

									<Style TargetType="{x:Type ListBox}">
										<Setter Property="Background" Value="{StaticResource ListBox.Static.Background}" />
										<Setter Property="BorderBrush" Value="{StaticResource ListBox.Static.Border}" />
										<Setter Property="BorderThickness" Value="1" />
										<Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" />
										<Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled" />
										<Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Visible" />
										<Setter Property="ScrollViewer.CanContentScroll" Value="true" />
										<Setter Property="ScrollViewer.PanningMode" Value="Both" />
										<Setter Property="Stylus.IsFlicksEnabled" Value="False" />

										<Setter Property="Template">
											<Setter.Value>
												<ControlTemplate x:Name="lbxCt1"
														TargetType="{x:Type ListBox}"
														>
													<DockPanel>

														<Border Margin="0,0,10,0"
																Padding="2"
																Background="{StaticResource Header.Container.Background.Normal}"
																DockPanel.Dock="Top"
																CornerRadius="{StaticResource Normal.CornerRadius}"
																>

															<Grid HorizontalAlignment="Stretch">
																<Grid.ColumnDefinitions>
																	<ColumnDefinition Width="{StaticResource Style.Chart.C0}" />
																	<ColumnDefinition Width="{StaticResource Style.Chart.C1}" />
																	<ColumnDefinition Width="{StaticResource Style.Chart.C2}" />
																	<ColumnDefinition Width="{StaticResource Style.Chart.C3}" />

																</Grid.ColumnDefinitions>

																<Grid.RowDefinitions>
																	<RowDefinition Height="auto" />
																	<RowDefinition Height="*" />
																</Grid.RowDefinitions>

																<!-- <Border Grid.Column="0" -->
																<!-- 		Grid.Row="0" -->
																<!-- 		CornerRadius="{StaticResource Normal.CornerRadius}" -->
																<!-- 		Style="{StaticResource Lv1.Prime.Hdr}" -->
																<!-- 		> -->
																<!-- 	<Label x:Name="TbxPosLbl" -->
																<!-- 			Content="#" -->
																<!-- 			Padding="0,0,0,3" -->
																<!-- 			HorizontalAlignment="Center" -->
																<!-- 			VerticalAlignment="Center" -->
																<!-- 			FontSize="{StaticResource FontSize.XLarge}" -->
																<!-- 			Foreground="White" -->
																<!-- 			/> -->
																<!-- </Border> -->

																<Border Grid.Column="1"
																		Grid.Row="0"
																		Margin="1,0,0,0"
																		CornerRadius="{StaticResource Normal.CornerRadius}"
																		Style="{StaticResource Lv1.Prime.Hdr}"
																		>
																	<TextBlock x:Name="tbx1A"
																			Padding="0,0,0,4"
																			TextWrapping="Wrap"
																			TextAlignment="Center"
																			Text="Style Name&#013;and Unit Type"
																			Style="{StaticResource Tblk.Lv1.Hdr.Prime}"
																			/>
																</Border>

																<Grid Grid.Column="2"
																		Grid.Row="0"
																		Margin="1,0,0,0"
																		>

																	<Grid.ColumnDefinitions>
																		<ColumnDefinition Width="*" />
																		<ColumnDefinition Width="*" />
																		<ColumnDefinition Width="*" />
																	</Grid.ColumnDefinitions>

																	<Grid.RowDefinitions>
																		<RowDefinition Height="*" />
																		<RowDefinition Height="*" />
																	</Grid.RowDefinitions>

																	<Border Grid.Column="0"
																			Grid.Row="0"
																			Grid.ColumnSpan="3"
																			Padding="0,0,0,2"
																			CornerRadius="{StaticResource Normal.CornerRadius}"
																			Style="{StaticResource Lv1.Prime.Hdr}"
																			>

																		<TextBlock FontSize="{StaticResource FontSize.Normal}"
																				TextWrapping="Wrap"
																				Text="Show in"
																				Style="{StaticResource Tblk.Lv1.Hdr.Prime}"
																				/>
																	</Border>


																	<Border Grid.Column="0"
																			Grid.Row="1"
																			Margin="0,1,0,0"
																			Padding="0.5,0,0.5,1"
																			CornerRadius="{StaticResource Normal.CornerRadius}"
																			Style="{StaticResource Lv1.Prime.Hdr}"
																			>

																		<TextBlock FontSize="{StaticResource FontSize.Small}"
																				TextWrapping="Wrap"
																				TextAlignment="Center"
																				Text="Ribbon Favs"
																				Style="{StaticResource Tblk.Lv1.Hdr.Prime}"
																				/>
																	</Border>

																	<Border Grid.Column="1"
																			Grid.Row="1"
																			Margin="1,1,0,0"
																			Padding="0.5,0,0.5,1"
																			CornerRadius="{StaticResource Normal.CornerRadius}"
																			Style="{StaticResource Lv1.Prime.Hdr}"
																			>

																		<TextBlock FontSize="{StaticResource FontSize.Small}"
																				TextAlignment="Center"
																				TextWrapping="Wrap"
																				Text="Dialog Left"
																				Style="{StaticResource Tblk.Lv1.Hdr.Prime}"
																				/>
																	</Border>
																	
																	<Border Grid.Column="2"
																			Grid.Row="1"
																			Margin="1,1,0,0"
																			Padding="0.5,0,0.5,1"
																			CornerRadius="{StaticResource Normal.CornerRadius}"
																			Style="{StaticResource Lv1.Prime.Hdr}"
																			>

																		<TextBlock FontSize="{StaticResource FontSize.Small}"
																				TextAlignment="Center"
																				TextWrapping="Wrap"
																				Text="Dialog Right"
																				Style="{StaticResource Tblk.Lv1.Hdr.Prime}"
																				/>
																	</Border>

																</Grid>


																<Border Grid.Column="3"
																		Grid.Row="0"
																		Margin="1,0,0,0"
																		CornerRadius="{StaticResource Normal.CornerRadius}"
																		Style="{StaticResource Lv1.Prime.Hdr}"
																		>
																	<TextBlock Name="tbx2"
																			Text="Example"
																			TextAlignment="Center"
																			Style="{StaticResource Tblk.Lv1.Hdr.Prime}"
																			/>
																</Border>

															</Grid>

														</Border>

														<!--#region > items-->

														<Border x:Name="Bd"
																Padding="0,0,0,0"
																Background="Transparent"
																BorderThickness="0,0,0,0"
																SnapsToDevicePixels="true"
																>

															<ScrollViewer Padding="{TemplateBinding Padding}"
																	Focusable="false"
																	>
																<ItemsPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
															</ScrollViewer>
														</Border>

														<!--#endregion-->

													</DockPanel>

													<ControlTemplate.Triggers>
														<Trigger Property="IsEnabled" Value="false">
															<Setter TargetName="Bd" Property="Background" Value="{StaticResource ListBox.Disabled.Background}" />
															<Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource ListBox.Disabled.Border}" />
														</Trigger>
														<MultiTrigger>
															<MultiTrigger.Conditions>
																<Condition Property="IsGrouping" Value="true" />
																<Condition Property="VirtualizingPanel.IsVirtualizingWhenGrouping" Value="false" />
															</MultiTrigger.Conditions>
															<Setter Property="ScrollViewer.CanContentScroll" Value="false" />
														</MultiTrigger>
													</ControlTemplate.Triggers>
												</ControlTemplate>
											</Setter.Value>
										</Setter>

									</Style>

								</ListBox.Style>
								<!--#endregion-->

								<!--#region > item template-->
								<ListBox.ItemTemplate>
									<DataTemplate DataType="{x:Type unitsUtil:UnitStyle}">

										<Border Margin="0,2,0,0"
												Width="{Binding ElementName=lbx,
																				Path=ActualWidth}"
												Padding="3,2,3,2"
												Background="{StaticResource Item.Container.Background.Normal}"
												CornerRadius="{StaticResource Normal.CornerRadius}"
												>

											<Grid Margin="0,0,10,0">
												<Grid.ColumnDefinitions>
													<ColumnDefinition Width="{StaticResource Style.Chart.C0}" />
													<ColumnDefinition Width="{StaticResource Style.Chart.C1}" />
													<ColumnDefinition Width="{StaticResource Style.Chart.C2}" />
													<ColumnDefinition Width="{StaticResource Style.Chart.C3}" />

												</Grid.ColumnDefinitions>

												<Grid.RowDefinitions>
													<RowDefinition Height="*" />
													<RowDefinition Height="*" />
												</Grid.RowDefinitions>


												<!--#region > item 1 (name and desc)-->

												<!-- <Border Margin="0,0,0,0" -->
												<!-- 		CornerRadius="{StaticResource Normal.CornerRadius}" -->
												<!-- 		Style="{StaticResource Lv1.2ndry.Item}" -->
												<!-- 		> -->
												<!-- 	<TextBlock HorizontalAlignment="Center" -->
												<!-- 			VerticalAlignment="Center" -->
												<!-- 			FontSize="{StaticResource FontSize.Normal}" -->
												<!-- 			Foreground="DarkGray" -->
												<!-- 			d:Text="99" -->
												<!-- 			Text="{Binding Seq, -->
												<!-- 										 Mode=OneWay}" -->
												<!-- 			/> -->
												<!-- </Border> -->

												<StackPanel Grid.Column="1"
														Grid.Row="0"
														Margin="1,0,0,0"
														Orientation="Vertical"
														>
													<Border CornerRadius="{StaticResource Normal.CornerRadius}"
															Style="{StaticResource Lv1.Prime.Item}"
															>
														<TextBlock Padding="5,0,0,2"
																d:Text="This is a temp name"
																TextWrapping="Wrap"
																Text="{Binding Name}"
																Style="{StaticResource Tblk.Lv1.Value.Prime}"
																/>
													</Border>

													<Border Margin="0,1,0,0"
															CornerRadius="{StaticResource Normal.CornerRadius}"
															Style="{StaticResource Lv1.2ndry.Item}"
															>
														<TextBlock Padding="5,0,0,2"
																HorizontalAlignment="Left"
																Foreground="DarkGray"
																d:Text="This is the unit type"
																TextWrapping="Wrap"
																TextAlignment="Left"
																Text="{Binding UnitDescription}"
																Style="{StaticResource Tblk.Lv1.Value.2ndry}"
																/>
													</Border>

												</StackPanel>


												<!--#endregion-->


												<Grid Grid.Column="2"
														Grid.Row="0"
														VerticalAlignment="Stretch"
														>

													<Grid.RowDefinitions>
														<RowDefinition Height="*" />
														<RowDefinition Height="*" />
													</Grid.RowDefinitions>

													<Grid.ColumnDefinitions>
														<ColumnDefinition Width="*" />
														<ColumnDefinition Width="*" />
														<ColumnDefinition Width="*" />
													</Grid.ColumnDefinitions>

																										
													<Border Grid.Column="2"
															Grid.Row="0"
															Grid.RowSpan="2"
															Margin="1,0,0,0"
															CornerRadius="{StaticResource Normal.CornerRadius}"
															Style="{StaticResource Lv1.Prime.Item}"
													>
														<CheckBox HorizontalAlignment="Center"
																VerticalAlignment="Center"
																FontSize="{StaticResource FontSize.Small}"
																Background="SlateGray"
																Foreground="White"
																BorderThickness="0"
																IsChecked="{Binding ShowInDialogRight}"
														/>

													</Border>



													<Border Grid.Column="1"
															Grid.Row="0"
															Grid.RowSpan="2"
															Margin="1,0,0,0"
															CornerRadius="{StaticResource Normal.CornerRadius}"
															Style="{StaticResource Lv1.Prime.Item}"
															>
														<CheckBox HorizontalAlignment="Center"
																VerticalAlignment="Center"
																FontSize="{StaticResource FontSize.Small}"
																Background="SlateGray"
																Foreground="White"
																BorderThickness="0"
																IsChecked="{Binding ShowInDialogLeft}"
																/>
													</Border>

													<Border Grid.Column="0"
															Grid.Row="0"
															Grid.RowSpan="2"
															Margin="1,0,0,0"
															CornerRadius="{StaticResource Normal.CornerRadius}"
															Style="{StaticResource Lv1.Prime.Item}"
															>
														<CheckBox HorizontalAlignment="Center"
																VerticalAlignment="Center"
																FontSize="{StaticResource FontSize.Small}"
																Background="SlateGray"
																Foreground="White"
																BorderThickness="0"
																IsChecked="{Binding ShowInRibbon}"
																/>

													</Border>


												</Grid>


												<!--#region > item 2 (sample)-->
												<Border Grid.Column="3"
														Grid.Row="0"
														Margin="1,0,0,0"
														HorizontalAlignment="Stretch"
														CornerRadius="{StaticResource Normal.CornerRadius}"
														Style="{StaticResource Lv1.Prime.Item}"
														>
													<TextBlock FontSize="{StaticResource FontSize.Large}"
															d:Text="0.00&quot;"
															TextAlignment="Center"
															Text="{Binding Path=SampleFormatted,
																						 FallbackValue='0.00'}"
															Style="{StaticResource Tblk.Desc}"
															/>
												</Border>



												<!--#endregion-->

											</Grid>

										</Border>

									</DataTemplate>
								</ListBox.ItemTemplate>
								<!--#endregion-->

							</ListBox>

						</DockPanel>

						<!--#endregion-->

					</Grid>



			</DataTemplate>

			
			<DataTemplate x:Key="StylesOrder">




			</DataTemplate>



		</ResourceDictionary>

	</Window.Resources>

	<Grid Margin="15,12,8,8">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="1*" />
		</Grid.ColumnDefinitions>

		<Grid.RowDefinitions>
			<RowDefinition Height="{StaticResource Main.Row.Height}" />
			<RowDefinition Height="{StaticResource Control.Row.Height}" />
		</Grid.RowDefinitions>

		<DockPanel x:Name="DialogControl"
				Grid.Column="0"
				Grid.Row="1"
				Margin="0,0,10,0"
				HorizontalAlignment="Stretch"
				VerticalAlignment="Bottom"
				>
			<Button x:Name="BtnChgTemplate1"
					Margin="0,0,5,0"
					HorizontalAlignment="left"
					VerticalAlignment="Bottom"
					DockPanel.Dock="Left"
					Template="{StaticResource Button.Normal.ControlTemplate}"
					Click="BtnChgTemplate_OnClick"
					>
				<Button.Content>
					<TextBlock Padding="12,0,12,4"
							FontSize="{StaticResource FontSize.Normal}"
							d:Text="Adjust Styles"
							Text="{Binding ContentType}"
							/>
				</Button.Content>
			</Button>

			<Button x:Name="BtnDone"
					Margin="5,0,0,0"
					HorizontalAlignment="Right"
					VerticalAlignment="Bottom"
					FontSize="{StaticResource FontSize.Normal}"
					DockPanel.Dock="Right"
					Template="{StaticResource Button.Normal.ControlTemplate}"
					Click="BtnDone_OnClick"
					>
				<Button.Content>
					<TextBlock Padding="25,0,25,4"
							FontSize="{StaticResource FontSize.Normal}"
							Text="Done"
							/>
				</Button.Content>
			</Button>

			<Button x:Name="BtnApply"
					Margin="5,0,0,0"
					HorizontalAlignment="Right"
					VerticalAlignment="Bottom"
					DockPanel.Dock="Right"
					Template="{StaticResource Button.Normal.ControlTemplate}"
					>
				<Button.Content>
					<TextBlock Padding="25,0,25,4"
							FontSize="{StaticResource FontSize.Normal}"
							Text="Apply"
							/>
				</Button.Content>
			</Button>

		</DockPanel>

		<ContentControl x:Name="Content"
				Grid.Column="0"
				Grid.Row="0"
				>

			<ContentControl.Style>
				<Style TargetType="ContentControl">
					<Style.Triggers>
						<DataTrigger Value="0" Binding="{Binding TempSel, FallbackValue='0'}">
							<Setter Property="ContentTemplate" Value="{DynamicResource StylesSelection}">
							</Setter>
						</DataTrigger>
						<DataTrigger Value="1" Binding="{Binding TempSel}">
							<Setter Property="ContentTemplate" Value="{DynamicResource StylesOrder}">
							</Setter>
						</DataTrigger>
					</Style.Triggers>
				</Style>
			</ContentControl.Style>

		</ContentControl>

	</Grid>

</Window>

